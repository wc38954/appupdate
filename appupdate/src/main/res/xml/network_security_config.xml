<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <base-config cleartextTrafficPermitted="true">
        <trust-anchors>
            <!--信任系统的CA证书-->
            <certificates src="system" overridePins="true" />
            <!--信任用户导入的CA证书-->
            <certificates src="user" overridePins="true" />
        </trust-anchors>
    </base-config>
</network-security-config>